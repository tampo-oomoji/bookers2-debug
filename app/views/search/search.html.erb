<table class="table table-hover table-inverse">
    
    <% if @model == "User" %>
<tbody><% @users.each do |user| %>
<tr>
   <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
</tr>
<% end %>
</tbody>
<% else %>
<tbody>
    <% @books.each do |book| %>
    <tr>
        <td>
             <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td><%= link_to "#{book.post_comments.count} コメント", book_path(book.id) %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>